{% macro video(link, title) %}

<div class="video">

<video src="{{ link }}" controls>
<p>Tu navegador no soporta el elemento <code>video</code>.</p>
</video>

</div>

<p class="descargar"><a title="Haga clic con en botón derecho del mouse, y seleccione 'Guardar enlace como...'" href="{{ link }}">Descargar {% if title %}"{{ title }}"{% else %}el archivo de video{% endif %}</a>.</p>

{% endmacro %}



{% macro audio(link, title) %}

<div class="audio">

<audio controls src="{{ link }}">
<p>Tu navegador no soporta el elemento <code>audio</code>.</p>
</audio>

</div>

<p class="descargar"><a title="Haga clic con en botón derecho del mouse, y seleccione 'Guardar enlace como...'" href="{{ link }}">Descargar {% if title %}"{{ title }}"{% else %}el archivo de audio{% endif %}</a>.</p>

{% endmacro %}



{% macro youtube(id, title) %}

<div class="youtube">

<iframe width="640" height="360" src="http://www.youtube.com/embed/{{ id }}" frameborder="0" allowfullscreen></iframe>

</div>

{% endmacro %}



{% macro vimeo(id, title) %}

<div class="vimeo">

<iframe src="http://player.vimeo.com/video/{{ id }}?title=0&amp;byline=0&amp;portrait=0&amp;badge=0&amp;color=ffffff" width="640" height="360" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
{% if title%}<p>{{ title }}</p>{% else %}<p><a href="http://vimeo.com/{{ id }}">Ver este video en Vimeo.com</a>.</p>{% endif %}

</div>

{% endmacro %}
